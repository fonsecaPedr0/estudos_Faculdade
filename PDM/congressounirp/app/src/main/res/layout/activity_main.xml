<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/DarkGray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CONGRESSO UNIRP"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:background="@color/DarkSeaGreen"
            android:padding="23dp"/>

        <Button
            android:id="@+id/btnCadastroAvaliador"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Cadastro Avaliador"
            android:textColor="@color/black"
            android:backgroundTint="@color/SpringGreen"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:padding="20dp"/>

        <Button
            android:id="@+id/btnCadastroTrabalho"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Cadastro Trabalho"
            android:textColor="@color/black"
            android:backgroundTint="@color/SpringGreen"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:padding="20dp"/>

        <Button
            android:id="@+id/btnListarTrabalhoApress"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Trabalhos Apresentação"
            android:textColor="@color/black"
            android:backgroundTint="@color/SpringGreen"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:padding="20dp"/>

        <Button
            android:id="@+id/btnListarTrabalhoRess"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Trabalhos Resumo"
            android:textColor="@color/black"
            android:backgroundTint="@color/SpringGreen"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:padding="20dp"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>