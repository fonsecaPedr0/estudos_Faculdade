<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:foregroundGravity="center_horizontal"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/cabecalho"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="18dp"
            android:textSize="18sp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@color/red"
            android:text="Calculo Juros Composto"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:textSize="15sp"
            android:gravity="center"
            android:text="Capital R$"
            android:background="@color/cardview_dark_background"
            android:textColor="@color/white"/>

        <EditText
            android:id="@+id/idCapital"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:textSize="15sp"
            android:textAlignment="center"
            android:inputType="numberDecimal"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:textSize="15sp"
            android:gravity="center"
            android:text="Juros em Porcentagem %"
            android:background="@color/cardview_dark_background"
            android:textColor="@color/white"/>

        <EditText
            android:id="@+id/idIJuros"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:textSize="15sp"
            android:inputType="numberDecimal"
            android:textAlignment="center"
            android:textAppearance="@color/black"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:textSize="15sp"
            android:gravity="center"
            android:text="Tempo"
            android:background="@color/cardview_dark_background"
            android:textColor="@color/white"/>

        <EditText
            android:id="@+id/idTempo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:textSize="15sp"
            android:inputType="numberDecimal"
            android:textAlignment="center"
            android:textAppearance="@color/black"/>

        <RadioGroup
            android:id="@+id/idPeriodo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/idAno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ano"/>

            <RadioButton
                android:id="@+id/idMes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MÃªs"/>

        </RadioGroup>

        <Button
            android:id="@+id/idCalcular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calcular"/>

        <TextView
            android:id="@+id/idMontante"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:textSize="15sp"
            android:gravity="center"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/idJurosC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:textSize="15sp"
            android:gravity="center"
            android:textColor="@color/black"/>

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>